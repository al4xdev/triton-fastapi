            thinking_text = ""
            answer_text = ""
            is_thinking = True
            
            response_stream = chatbot_instance.ask(**chat_args)
                            
            for chunk in response_stream:
                chunk_type = chunk.get("type")
                chunk_content = chunk.get("content", "")

                if chunk_type == "reasoning":
